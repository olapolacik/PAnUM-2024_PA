    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_start">

    <fragment
        android:id="@+id/fragment_start"
        android:name="com.example.workoutapp.WorkoutListFragment"
        android:label="Start Fragment"
        tools:layout="@layout/fragment_workout_detail">

        <action
            android:id="@+id/action_start_to_detail"
            app:destination="@id/fragment_detail" />
    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.example.workoutapp.WorkoutListFragment"
        android:label="Detail Fragment"
        tools:layout="@layout/fragment_workout_list" />

</navigation>
